import jwmsession.menugen


if __name__ == "__main__":
    xdgdef = "@sysconfdir@/xdg/menus/jwm-applications.menu"
    mg = jwmsession.menugen.MenuGenerator(xdgdef, sys.argv[2])
    f = open(sys.argv[1], 'wt', encoding='utf-8')
    mg.to_file(f)
    f.close()